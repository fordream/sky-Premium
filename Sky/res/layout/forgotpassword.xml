<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_12dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_384dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/backgound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_form_bg"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/loginmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_120dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="@dimen/dimen_255dp"
                android:layout_height="@dimen/dimen_88dp"
                android:background="@drawable/login_form_bg_edit"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_246dp"
                    android:layout_height="@dimen/dimen_78dp"
                    android:background="@drawable/login_form_bg_edit_2"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <org.com.atmarkcafe.sky.customviews.charting.MEditText
                        android:id="@+id/user"
                        style="@style/editext_center_tranfer_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_39dp"
                        android:hint="@string/msg_member_id"
                        android:singleLine="true"
                        custom:txtFont="Light"
                        custom:txtHintEng="@string/msg_member_id"
                        custom:txtHintJa="@string/msg_member_id_j" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#bebebe" />

                    <org.com.atmarkcafe.sky.customviews.charting.MEditText
                        android:id="@+id/email"
                        style="@style/editext_center_tranfer_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_39dp"
                        android:hint="@string/login_password"
                        android:singleLine="true"
                        custom:txtFont="Light"
                        custom:txtHintEng="@string/msg_member_email"
                        custom:txtHintJa="@string/msg_member_email_j" />
                </LinearLayout>
            </LinearLayout>

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/btnforgotpassword"
                style="@style/button"
                android:layout_width="@dimen/dimen_255dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/login_btn"
                android:text="@string/login_forgot_password"
                custom:txtEng="@string/login_forgot_password"
                custom:txtFont="Bold"
                android:textColor="@android:color/white"
                custom:txtJa="@string/login_forgot_password_j"
                custom:txtTouch="yes" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
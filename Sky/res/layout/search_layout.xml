<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ec_bg_search" 
    android:gravity="center"><!-- #036898 -->
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/dimen_10dp"
	    android:layout_marginBottom="@dimen/dimen_10dp"
	    android:layout_gravity="center">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
		    android:layout_toLeftOf="@+id/search_txtconfirm_id"
		    android:gravity="center_vertical">
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center">
		        <EditText
			        android:id="@+id/search_edt_id"
			        android:layout_width="match_parent"
			        android:layout_height="@dimen/dimen_32dp"
			        android:background="@drawable/editext_radius"
			        android:paddingLeft="@dimen/dimen_5dp"
			        android:paddingRight="@dimen/dimen_20dp"
			        android:imeOptions="actionDone"
			        android:singleLine="true"
			        android:layout_marginRight="@dimen/dimen_10dp" 
			        android:layout_marginLeft="@dimen/dimen_10dp"/><!-- bgr_edt_search -->
		        <ImageView
                    android:id="@+id/clear_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/btn_clear"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_20dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>
		    </RelativeLayout>
	        
	        
	    </LinearLayout>
	    
	
	    <org.com.atmarkcafe.sky.customviews.charting.MTextView
	        android:layout_alignParentRight="true"
	        android:id="@+id/search_txtconfirm_id"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/dimen_32dp"
	        android:background="@drawable/bgr_green"
	        android:gravity="center"
	        android:text="@string/msg_search"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/dimen_16dp"
	        android:textStyle="bold"
	        app:txtEng="@string/msg_search"
	        app:txtJa="@string/msg_search_j"
	        android:paddingLeft="@dimen/dimen_5dp"
	        android:paddingRight="@dimen/dimen_5dp" 
	        android:layout_marginRight="@dimen/dimen_10dp"/>
	</RelativeLayout>
    

</LinearLayout>
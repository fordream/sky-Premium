<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <org.com.atmarkcafe.sky.customviews.charting.MTextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/mya_purchase_message_title"
       custom:txtEng="@string/mya_purchase_message_title"
       custom:txtJa="@string/mya_purchase_message_title_j"
       style="@style/v2_sky_ec_address_lable"
       android:layout_marginTop="@dimen/dimen_10dp"/>
    <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="#d4d4d4"
       android:layout_marginTop="@dimen/dimen_10dp"/>
    <org.com.atmarkcafe.sky.customviews.charting.MTextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/mya_purchase_message_desc"
       custom:txtEng="@string/mya_purchase_message_desc"
       custom:txtJa="@string/mya_purchase_message_desc_j"
       style="@style/v2_historydetail_address_value"
       android:layout_marginTop="@dimen/dimen_10dp"/>
    <org.com.atmarkcafe.sky.customviews.charting.MTextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/mya_purchase_message_product"
       custom:txtEng="@string/mya_purchase_message_product"
       custom:txtJa="@string/mya_purchase_message_product_j"
       style="@style/v2_sky_ec_address_lable"
       android:layout_marginTop="@dimen/dimen_10dp"/>
    <RelativeLayout
        android:id="@+id/select_product"
        style="@style/sky_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_product_value"
            style="@style/sky_update_contract"
            android:layout_width="@dimen/dimen_260dp"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:text=""
            android:singleLine="true"/>
        <ImageView
            android:layout_width="@dimen/dimen_8dp"
            android:layout_height="@dimen/dimen_7dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_dropdow" />
    </RelativeLayout>
    <EditText
        android:id="@+id/mya_purchase_message_send_value"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        style="@style/sky_edit_message_history"
        android:layout_marginTop="@dimen/dimen_10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_50dp">
         <org.com.atmarkcafe.sky.customviews.charting.MTextView
	        android:id="@+id/mya_purchase_message_send_btn"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/dimen_40dp"
	        android:text="@string/mya_purchase_message_send_btn"
	        custom:txtEng="@string/mya_purchase_message_send_btn"
          	custom:txtJa="@string/mya_purchase_message_send_btn_j"
	        android:background="@drawable/btn_checkout"
	        android:gravity="center"
	        android:textSize="@dimen/dimen_12dp"
	        android:textColor="#ffffff"/><!-- invite_btn -->
    </LinearLayout>
    
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:id="@+id/main_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >
    <org.com.atmarkcafe.view.HeaderECView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.com.atmarkcafe.view.HeaderECView>
    <com.acv.cheerz.base.view.CustomScrollView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:visibility="invisible">

        	<LinearLayout
        	    android:id="@+id/profile_main"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:gravity="center|center_vertical"
        	    android:orientation="vertical" >

            <LinearLayout
	            android:id="@+id/linearLayoutForm"
	            android:layout_width="@dimen/dimen_300dp"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:gravity="center">
	        </LinearLayout>
	        
	        <RelativeLayout
	            android:layout_width="@dimen/dimen_300dp"
	            android:layout_height="@dimen/dimen_44dp"
	            android:orientation="vertical" 
	            android:gravity="center"
	            android:background="#c9c9c9"
	            >

	            <org.com.atmarkcafe.sky.customviews.charting.MTextView
	                style="@style/sky_update_contract"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true"
	                android:layout_alignParentLeft="true"
	                android:layout_marginLeft="@dimen/dimen_10dp"
	                android:text="@string/ec_ship_total"
	                custom:txtEng="@string/ec_ship_total"
	                custom:txtJa="@string/ec_ship_total_j" 
	                android:textStyle="bold"
	                android:textSize="@dimen/dimen_15dp"/>
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="@dimen/dimen_10dp"
	                android:orientation="horizontal">
	                	<org.com.atmarkcafe.sky.customviews.charting.MTextView
			                android:id="@+id/shipping_cost"
			                style="@style/sky_update_contract"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="0"
			                android:textSize="@dimen/dimen_15dp"/>
	                	<org.com.atmarkcafe.sky.customviews.charting.MTextView
			                style="@style/sky_update_contract"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="@string/ec_ship_total2"
			                custom:txtEng="@string/ec_ship_total2"
			                custom:txtJa="@string/ec_ship_total2_j"
			                android:textSize="@dimen/dimen_15dp"/>
	            </LinearLayout>
	             

	        </RelativeLayout>
	        
         	<org.com.atmarkcafe.sky.customviews.charting.MTextView 
	            android:layout_width="@dimen/dimen_300dp"
	            android:layout_height="wrap_content"
	            android:text="@string/contract_termofuse"
	            custom:txtEng="@string/contract_termofuse"
	            custom:txtJa="@string/contract_termofuse_j"
	            android:layout_marginTop="@dimen/dimen_10dp"
	            style="@style/sky_update_contract"
	            android:visibility="gone"/>
		    <RelativeLayout 
		        android:id="@+id/term_value"
		        android:layout_width="@dimen/dimen_300dp"
		        android:layout_height="@dimen/dimen_163dp"
		        android:layout_marginTop="@dimen/dimen_10dp"
		        android:visibility="gone">
		    </RelativeLayout>

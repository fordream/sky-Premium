<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/org.com.atmarkcafe.sky"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:weightSum="6" 
        android:background="#FFFFFF"
        >
		
        <ImageView 
            android:id="@+id/icon_news_id"
            android:layout_width="@dimen/dimen_31dp"
            android:layout_height="@dimen/dimen_31dp"
            android:background="@null"
            android:src="@drawable/icon_news"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_11dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/mailbox_row_subject_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textStyle="bold" 
            android:textSize="@dimen/dimen_11dp"
            android:textColor="#555555"
            />

        <TextView
            android:id="@+id/item_header_text_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_15dp"
            android:textStyle="bold" />

        <ImageView 
            android:id="@+id/icon_detail_id"
        	    android:layout_width="@dimen/dimen_20dp"
        	    android:layout_height="@dimen/dimen_20dp"
        	    android:background="@drawable/ico_indi_gray2"
        	    android:layout_marginRight="10dp"
        	    android:layout_marginLeft="20dp"
            	android:layout_gravity="center"
        	    />
    </LinearLayout>

</RelativeLayout>
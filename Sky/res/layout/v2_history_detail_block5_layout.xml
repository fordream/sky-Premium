<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ededed">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        	<org.com.atmarkcafe.sky.customviews.charting.MTextView 
        	    android:id="@+id/mya_purchase_product_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/mya_purchase_product"
	            custom:txtEng="@string/mya_purchase_product"
	            custom:txtJa="@string/mya_purchase_product_j"
	            style="@style/v2_sky_ec_address_lable"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"/>
        	<TextView 
        	    android:id="@+id/mya_purchase_product"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/v2_sky_ec_address_value"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="@dimen/dimen_10dp"
	            android:layout_toRightOf="@+id/mya_purchase_product_title"
	            android:gravity="right"
	            android:layout_marginTop="@dimen/dimen_10dp"
	            android:layout_marginBottom="@dimen/dimen_10dp"/>
    </RelativeLayout>
    <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="#d4d4d4"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        	<org.com.atmarkcafe.sky.customviews.charting.MTextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/mya_purchase_quantity"
	            custom:txtEng="@string/mya_purchase_quantity"
	            custom:txtJa="@string/mya_purchase_quantity_j"
	            style="@style/v2_sky_ec_address_lable"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:layout_alignParentLeft="true"/>
        	<TextView 
        	    android:id="@+id/mya_purchase_quantity"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/v2_sky_ec_address_value"
	            android:layout_alignParentRight="true"
            	android:layout_marginRight="@dimen/dimen_10dp"/>
    </RelativeLayout>
    <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="#d4d4d4"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        	<org.com.atmarkcafe.sky.customviews.charting.MTextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/mya_purchase_unitprice"
	            custom:txtEng="@string/mya_purchase_unitprice"
	            custom:txtJa="@string/mya_purchase_unitprice_j"
	            style="@style/v2_sky_ec_address_lable"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:layout_alignParentLeft="true"/>
        	<TextView 
        	    android:id="@+id/mya_purchase_unitprice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/v2_sky_ec_address_value"
	            android:layout_alignParentRight="true"
				android:layout_marginRight="@dimen/dimen_10dp"/>
    </RelativeLayout>
    <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:background="#d4d4d4"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        	<org.com.atmarkcafe.sky.customviews.charting.MTextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/mya_purchase_totalprice"
	            custom:txtEng="@string/mya_purchase_totalprice"
	            custom:txtJa="@string/mya_purchase_totalprice_j"
	            style="@style/v2_sky_ec_address_lable"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:layout_alignParentLeft="true"/>
        	<TextView 
        	    android:id="@+id/mya_purchase_totalprice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/v2_sky_ec_address_value"
	            android:layout_alignParentRight="true"
				android:layout_marginRight="@dimen/dimen_10dp"
				android:text=""/>
    </RelativeLayout>
    <!-- <View
       android:layout_width="fill_parent"
       android:layout_height="1dp"
       android:layout_marginTop="@dimen/dimen_5dp"/> -->
   </LinearLayout> 
   <View
       android:layout_width="fill_parent"
       android:layout_height="@dimen/dimen_10dp"/>
</LinearLayout>

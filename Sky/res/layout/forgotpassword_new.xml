<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg3"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_15dp" 
    android:id="@+id/rl_fotgotpassword_id"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_384dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" 
        
        >

        <ImageView
            android:id="@+id/backgound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_form_bg" />
        <LinearLayout
            android:id="@+id/loginmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_130dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="@dimen/dimen_255dp"
                android:layout_height="@dimen/dimen_88dp"
                android:background="@drawable/login_form_bg_edit"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="@dimen/dimen_246dp"
                    android:layout_height="@dimen/dimen_78dp"
                    android:background="@drawable/login_form_bg_edit_2"
                    android:gravity="center"
                    android:orientation="vertical" >
					<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10" >

                    <org.com.atmarkcafe.sky.customviews.charting.MEditText
                        android:id="@+id/user"
                        style="@style/editext_center_tranfer_login"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_39dp"
                        android:layout_weight="9"
                        android:hint="@string/msg_member_id"
                        android:singleLine="true"
                        android:textColor="#000000"
                        custom:txtFont="Light"
                        custom:txtHintEng="@string/msg_member_id"
                        custom:txtHintJa="@string/msg_member_id_j" />

					<ImageView
                            android:id="@+id/clear_user_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:src="@drawable/btn_clear"
                            android:visibility="gone" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#bebebe" />
					<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10" >

                    <org.com.atmarkcafe.sky.customviews.charting.MEditText
                        android:id="@+id/email"
                        style="@style/editext_center_tranfer_login"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_39dp"
                        android:layout_weight="9"
                        android:hint="@string/forgotpwd_hint_mail"
                        android:singleLine="true"
                        android:textColor="#000000"
                        custom:txtFont="Light"
                        custom:txtHintEng="@string/forgotpwd_hint_mail"
                        custom:txtHintJa="@string/forgotpwd_hint_mail_j" />

                    <ImageView
                            android:id="@+id/clear_email_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:src="@drawable/btn_clear"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dimen_5dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_0dp"
                android:paddingTop="@dimen/dimen_5dp" >

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:background="@drawable/xml_login_checked"
                    android:button="@drawable/tranfer" />

                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/checkbox_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_0dp"
                    android:text="@string/login_remeber_password"
                    android:textColor="#777777"
                    android:textSize="@dimen/dimen_13dp"
                    custom:txtEng="@string/login_remeber_password"
                    custom:txtFont="Bold"
                    custom:txtJa="@string/login_remeber_password_j" />
            </LinearLayout> -->

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/btnforgotpassword"
                style="@style/button"
                android:layout_width="@dimen/dimen_255dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/login_btn"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="@string/forgotpwd_btn"
                custom:txtEng="@string/forgotpwd_btn"
                custom:txtFont="Bold"
                 android:textColor="@android:color/white"
                custom:txtJa="@string/forgotpwd_btn_j"
                custom:txtTouch="yes" />

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/backtologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_2dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_0dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:text="@string/forgotpwd_back_to_login"
                custom:txtEng="@string/forgotpwd_back_to_login"
                custom:txtJa="@string/forgotpwd_back_to_login_j"
                custom:txtStyle="u" 
                android:textColor="#000000"/>
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_2dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_0dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:text="@string/forgotpwd_lable1"
                custom:txtEng="@string/forgotpwd_lable1"
                custom:txtJa="@string/forgotpwd_lable1_j"
                android:textColor="#000000"/>
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/mail_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_2dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_0dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:text="@string/forgotpwd_lable2"
                custom:txtEng="@string/forgotpwd_lable2"
                custom:txtJa="@string/forgotpwd_lable2_j"
                custom:txtStyle="u" 
                android:textColor="#016ea4"/>
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_2dp"
                android:paddingLeft="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_0dp"
                android:paddingTop="@dimen/dimen_2dp"
                android:text="@string/forgotpwd_lable3"
                custom:txtEng="@string/forgotpwd_lable3"
                custom:txtJa="@string/forgotpwd_lable3_j"
                android:textColor="#000000"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            android:visibility="visible">

            <ImageView
                android:id="@+id/progressbar_text"
                android:layout_width="@dimen/dimen_198dp"
                android:layout_height="@dimen/dimen_28dp"
                android:src="@drawable/login_logo2"
                android:layout_marginTop="@dimen/dimen_85dp"
                android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical" >
            <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:gravity="center"
               android:orientation="horizontal" >
                <ImageView
                 android:layout_width="@dimen/dimen_82dp"
                 android:layout_height="fill_parent"
                 android:padding="@dimen/dimen_15dp"
                 android:scaleType="fitCenter"
                 android:src="@drawable/login_logo1"/>   
            </RelativeLayout>    
             
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
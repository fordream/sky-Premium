<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
         android:id="@+id/menu_left_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_left_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:gravity="center" >

        <ImageView
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:id="@+id/menu_icon"
            android:layout_width="@dimen/dimen_14dp"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dimen_14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level 1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_14dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/menu_space"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/space_menu_left" />

</LinearLayout>
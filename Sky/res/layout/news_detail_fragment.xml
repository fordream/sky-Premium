<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="#FFFFFF"
	     >
    <org.com.atmarkcafe.view.HeaderView
        android:id="@+id/news_detail_header_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.com.atmarkcafe.view.HeaderView>
    <LinearLayout 
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_detail_header"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <TextView 
            android:id="@+id/news_detail_titlecontent_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_14sp"
            android:text="@string/app_name"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textStyle="bold"
            />
        <TextView 
            android:id="@+id/news_detail_titledate_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_14sp"
            android:text="@string/app_name"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
	<WebView 
	    android:id="@+id/news_detail_content_id"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="@dimen/dimen_5dp"
	    android:layout_marginRight="@dimen/dimen_5dp"
	    android:layout_marginTop="@dimen/dimen_5dp"
	    />
	</LinearLayout>
	<com.acv.cheerz.base.view.LoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" 
        android:visibility="gone">
    </com.acv.cheerz.base.view.LoadingView>
    
</RelativeLayout>
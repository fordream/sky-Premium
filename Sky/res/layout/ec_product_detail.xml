<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    xmlns:flipview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <org.com.atmarkcafe.view.HeaderECView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </org.com.atmarkcafe.view.HeaderECView>

        <LinearLayout
            android:id="@+id/block_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="#ededed"
            android:orientation="vertical" 
            android:visibility="invisible">

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/text_1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:lineSpacingExtra="@dimen/dimen_3dp"
                android:textColor="@color/ec_pj_detail_name"
                android:textSize="@dimen/dimen_16dp"
                custom:txtFont="Bold" 
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="#cecece" />

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:lineSpacingExtra="@dimen/dimen_3dp"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_14dp"
                custom:txtFont="Bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/tranfer"
            android:dividerHeight="0px"
            android:listSelector="@drawable/tranfer"
            android:scrollbarThumbVertical="@drawable/tranfer"
            android:scrollbarTrackHorizontal="@drawable/tranfer"
            android:scrollbars="none" 
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="#ededed"
                android:minHeight="@dimen/dimen_400dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_15dp"
                android:paddingRight="@dimen/dimen_15dp" >

                <se.emilsjolander.flipview.FlipView
                    android:id="@+id/flip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_250dp"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    flipview:orientation="horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#cecece" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <org.com.atmarkcafe.sky.customviews.charting.MTextView
                        android:id="@+id/text_validate_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/ec_addtocart_error"
                        android:textColor="#555555"
                        android:textSize="@dimen/dimen_10dp"
                        android:visibility="gone"
                        custom:txtEng="@string/ec_addtocart_error"
                        custom:txtJa="@string/ec_addtocart_error_j" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_31dp"
                            android:layout_toLeftOf="@+id/temp_layout_id" >

                            <TextView
                                android:id="@+id/text_2"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_31dp"
                                android:gravity="left|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#555555"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/temp_layout_id"
                            android:layout_width="@dimen/dimen_120dp"
                            android:layout_height="@dimen/dimen_32dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bgr_add_cart" 
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/icon_add_cart_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:background="@null"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_add_cart"
                                android:visibility="visible" />

                            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                                android:id="@+id/text_4"
                                android:layout_width="@dimen/dimen_80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_toRightOf="@+id/icon_add_cart_id"
                                android:text="@string/add_to_cart2"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10dp"
                                android:visibility="visible"
                                custom:txtEng="@string/add_to_cart2"
                                custom:txtJa="@string/add_to_cart2_j"
                                android:gravity="center"/>
 <!-- custom:txtFont="Light" -->
                            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                                android:id="@+id/text_4_validate_gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:text="@string/ec_addtocart_btn_error"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/dimen_10dp"
                                android:visibility="gone"
                                custom:txtEng="@string/ec_addtocart_btn_error"
                                custom:txtFont="Light"
                                custom:txtJa="@string/ec_addtocart_btn_error_j" 
                                android:gravity="center"/>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_10dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/text_5" >


                            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                                android:id="@+id/carrier_name"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_35dp"
                                android:gravity="left|center_vertical"
                                android:text="@string/ec_mycart_quantity"
                                android:textColor="#555555"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold"
                                custom:txtEng="@string/ec_mycart_quantity"
                                custom:txtJa="@string/ec_mycart_quantity_j" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_5"
                            android:layout_width="@dimen/dimen_120dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_credit_new"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/dimen_13dp"/>
                    </RelativeLayout>
                    
                    <!-- new -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/text_52" >

                            <!--
                                 <org.com.atmarkcafe.sky.customviews.charting.MTextView
                                android:layout_width="@dimen/dimen_75dp"
                                android:layout_height="@dimen/dimen_31dp"
                                android:layout_alignParentRight="true"
                                android:gravity="left"
                                android:id="@+id/text_2"
                                android:textColor="#555555"
                                android:textSize="@dimen/dimen_13dp"/>
                            -->

                            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dimen_35dp"
                                android:gravity="left|center_vertical"
                                android:text="@string/ec_mycart_quantity"
                                android:textColor="#555555"
                                android:textSize="@dimen/dimen_14dp"
                                android:textStyle="bold"
                                custom:txtEng="@string/ec_mycart_quantity"
                                custom:txtJa="@string/ec_mycart_quantity_j" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/ec_mycart_quantity"
                                android:textColor="#555555"
                                android:textSize="@dimen/dimen_13dp" >

                                <org.com.atmarkcafe.sky.customviews.charting.MEditText
                                    android:id="@+id/edt_1"
                                    style="@style/editext_center_tranfer_login"
                                    android:layout_width="@dimen/dimen_34dp"
                                    android:layout_height="@dimen/dimen_34dp"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:background="@drawable/editext2_radius"
                                    android:padding="@dimen/dimen_2dp"
                                    android:gravity="center"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:text="1"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/dimen_10dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ship_clock"
                            android:layout_width="@dimen/dimen_120dp"
                            android:layout_height="@dimen/dimen_30dp"
                            android:background="@drawable/ec_detail_price_ship"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="#555555"
                            android:textSize="@dimen/dimen_14dp"
                            android:textStyle="normal"
                            android:text=""/><!-- android:paddingLeft="@dimen/dimen_20dp" custom:txtFont="Light"  -->
                    </RelativeLayout>
                    
                    <!-- favorite -->
                    <LinearLayout 
                        android:id="@+id/favorite_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView 
                            android:id="@+id/favorite_icon"
                            android:layout_width="@dimen/dimen_16dp"
                            android:layout_height="@dimen/dimen_15dp"
                            android:background="@drawable/favorite_on"/>
                        <org.com.atmarkcafe.sky.customviews.charting.MTextView 
                            android:id="@+id/favorite_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favorite_add"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:textColor="#555555"
                            android:textSize="@dimen/dimen_13dp"
                            custom:txtStyle="u"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#cecece" 
                    android:layout_marginTop="@dimen/dimen_10dp"/>

                <RelativeLayout
                    android:id="@+id/view_detail"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:visibility="visible" >
                </RelativeLayout>

                <WebView
                    android:id="@+id/webview_id"
                    android:layout_width="@dimen/dimen_280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_10dp" 
                    />
                <!--
                <LinearLayout
				    android:id="@+id/view_detail"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="@dimen/dimen_10dp"
				    android:layout_marginBottom="@dimen/dimen_10dp"
				    >
				    <View
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:background="#cecece" />
				</LinearLayout>
                -->
                <!--
                     <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/text_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:lineSpacingExtra="@dimen/dimen_3dp"
                    android:textColor="#7b7b7b"
                    android:textSize="@dimen/dimen_13dp"
                    custom:txtFont="Light" />
                -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.acv.cheerz.base.view.LoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
    </com.acv.cheerz.base.view.LoadingView>

</RelativeLayout>
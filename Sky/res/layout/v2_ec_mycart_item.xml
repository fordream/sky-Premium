    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:id="@+id/ec_mycart_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:focusable="true"
 	android:focusableInTouchMode="true"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="#ededed"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <LinearLayout 
            android:layout_width="@dimen/dimen_122dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
	            android:id="@+id/image_product"
	            android:layout_width="@dimen/dimen_94dp"
	            android:layout_height="@dimen/dimen_83dp"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:layout_marginTop="@dimen/dimen_10dp"
	            android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="@dimen/dimen_178dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout 
	            android:layout_width="@dimen/dimen_178dp"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_gravity="center_vertical">

	            <TextView
	                android:id="@+id/name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:gravity="center_vertical"
	                android:text=""
	                android:textColor="@color/ec_mycart_text"
	                android:textSize="@dimen/dimen_14dp" 
	                android:layout_marginTop="@dimen/dimen_10dp"
	                android:layout_toLeftOf="@+id/icon_delete"/>
	            <LinearLayout 
	                android:id="@+id/icon_delete"
	                android:layout_width="@dimen/dimen_40dp"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
		            android:layout_centerHorizontal="true"
		            android:layout_marginTop="@dimen/dimen_10dp"
		            android:gravity="center">
	                <ImageView
		                android:layout_width="@dimen/dimen_20dp"
		                android:layout_height="@dimen/dimen_20dp"
		                android:background="@drawable/ec_myvart_delete"
		                android:layout_gravity="center"/>
	            </LinearLayout>
	        </RelativeLayout>    
            
            <LinearLayout 
	            android:layout_width="@dimen/dimen_178dp"
	            android:layout_height="@dimen/dimen_30dp"
	            android:orientation="horizontal"
	            android:layout_gravity="center_vertical"
	            android:layout_marginTop="@dimen/dimen_10dp">
	            <org.com.atmarkcafe.sky.customviews.charting.MTextView
	                style="@style/sky_title_edit_text"
			        android:layout_width="@dimen/dimen_62dp"
			        android:layout_height="@dimen/dimen_28dp"
			        android:gravity="left|center_vertical"
			        android:textColor="#000000"
			        android:text="@string/ec_mycart_quantity"
			        custom:txtEng="@string/ec_mycart_quantity"
			        custom:txtJa="@string/ec_mycart_quantity_j"
			        android:textSize="@dimen/dimen_14dp"
			        android:textStyle="bold"
			        />
	            <org.com.atmarkcafe.sky.customviews.charting.MEditText
			        android:id="@+id/ec_mycart_quantity"
			        style="@style/ec_editext_mycart"
	                android:layout_width="@dimen/dimen_38dp"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="@dimen/dimen_10dp"
	                android:background="@drawable/editext2_radius"
			        android:textColor="#000000"
			        android:text="0"
			        android:inputType="number"
			        android:textSize="@dimen/dimen_12dp"
			        android:paddingTop="@dimen/dimen_9dp"
			        android:paddingBottom="@dimen/dimen_8dp"
			        android:singleLine="true"
			        android:imeOptions="actionDone"/>
            </LinearLayout>
            
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/ec_mycart_amount"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:textColor="#000000"
		        android:text="@string/ec_mycart_amount"
		        android:textSize="@dimen/dimen_15dp"
		        android:textStyle="bold"
		        android:layout_marginTop="@dimen/dimen_10dp"
		        android:layout_marginBottom="@dimen/dimen_10dp"/>
            <TextView
                android:id="@+id/product_not_available_detail"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:textColor="@color/ec_selection_status_text_out"
		        android:text=""
		        android:textSize="@dimen/dimen_15dp"
		        android:textStyle="bold"
		        android:layout_marginBottom="@dimen/dimen_10dp"/>
        </LinearLayout>    
         

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:id="@+id/ec_mycart_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="#ededed"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout 
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
	            android:id="@+id/image_product"
	            android:layout_width="@dimen/dimen_100dp"
	            android:layout_height="@dimen/dimen_100dp"
	            android:layout_marginLeft="@dimen/dimen_10dp"
	            android:layout_marginTop="@dimen/dimen_10dp"
	            android:scaleType="centerCrop"/>
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
		        android:id="@+id/name"
		        android:layout_width="@dimen/dimen_170dp"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:textColor="#1684b9"
		        android:textSize="@dimen/dimen_15dp"
		        android:layout_marginLeft="@dimen/dimen_10dp"
		        android:layout_marginTop="@dimen/dimen_5dp"/>
        </LinearLayout>
        <View 
            android:layout_width="@dimen/dimen_280dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="#b2b2b2">
        </View>    
        <LinearLayout 
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
		        android:layout_width="@dimen/dimen_90dp"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:textColor="#000000"
		        android:text="@string/ec_mycart_price"
                custom:txtEng="@string/ec_mycart_price"
                custom:txtJa="@string/ec_mycart_price_j" 
		        android:textSize="@dimen/dimen_12dp"
		        android:textStyle="bold"
		        android:layout_marginLeft="@dimen/dimen_10dp"/>
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
		        android:layout_width="@dimen/dimen_80dp"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:textColor="#000000"
		        android:text="@string/ec_mycart_quantity"
                custom:txtEng="@string/ec_mycart_quantity"
                custom:txtJa="@string/ec_mycart_quantity_j" 
		        android:textSize="@dimen/dimen_12dp"
		        android:textStyle="bold"
		        android:layout_marginLeft="@dimen/dimen_10dp"/>
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
		        android:layout_width="@dimen/dimen_90dp"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:textColor="#000000"
		        android:text="@string/ec_mycart_amount"
                custom:txtEng="@string/ec_mycart_amount"
                custom:txtJa="@string/ec_mycart_amount_j" 
		        android:textSize="@dimen/dimen_12dp"
		        android:textStyle="bold"
		        android:layout_marginLeft="@dimen/dimen_10dp"/>
        </LinearLayout> 
        <LinearLayout 
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:orientation="horizontal">
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
		        android:id="@+id/ec_mycart_price"
		        android:layout_width="@dimen/dimen_90dp"
		        android:layout_height="@dimen/dimen_35dp"
		        android:gravity="left|center_vertical"
		        android:textColor="#000000"
		        android:text="0"
		        android:textSize="@dimen/dimen_12dp"
		        android:layout_marginLeft="@dimen/dimen_10dp"/>
            <LinearLayout 
            	android:layout_width="@dimen/dimen_80dp"
            	android:layout_height="@dimen/dimen_40dp"
            	android:gravity="center_horizontal"
            	android:layout_marginLeft="@dimen/dimen_10dp">
            	<org.com.atmarkcafe.sky.customviews.charting.MEditText
			        android:id="@+id/ec_mycart_quantity"
			        style="@style/editext_center_tranfer_login"
	                android:layout_width="@dimen/dimen_35dp"
	                android:layout_height="wrap_content"
	                android:paddingTop="@dimen/dimen_25dp"
	                android:background="@drawable/ec_product_detail_x3"
			        android:textColor="#000000"
			        android:text="0"
			        android:inputType="number"
			        android:textSize="@dimen/dimen_10dp"
			        android:singleLine="true"
			        android:imeOptions="actionDone"/>
            </LinearLayout>
            
            <org.com.atmarkcafe.sky.customviews.charting.MTextView
		        android:id="@+id/ec_mycart_amount"
		        android:layout_width="@dimen/dimen_90dp"
		        android:layout_height="@dimen/dimen_35dp"
		        android:gravity="right|center_vertical"
		        android:textColor="#000000"
		        android:text="0"
		        android:textSize="@dimen/dimen_12dp"
		        android:layout_marginLeft="@dimen/dimen_10dp"/>
        </LinearLayout> 
   		<View 
            android:layout_width="@dimen/dimen_280dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="#b2b2b2">
        </View>
		<LinearLayout 
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:orientation="horizontal">
			<LinearLayout
			    android:id="@+id/icon_delete"
			    android:layout_width="@dimen/dimen_40dp"
			    android:layout_height="@dimen/dimen_40dp"
			    android:layout_marginLeft="@dimen/dimen_250dp" >
			    <ImageView
			        android:layout_width="@dimen/dimen_25dp"
			        android:layout_height="@dimen/dimen_28dp"
			        android:layout_marginLeft="@dimen/dimen_10dp"
			        android:src="@drawable/delete" />
			</LinearLayout>

        </LinearLayout>
        
	</LinearLayout>			        

</LinearLayout>
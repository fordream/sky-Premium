<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:id="@+id/main_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >
    <org.com.atmarkcafe.view.HeaderECView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </org.com.atmarkcafe.view.HeaderECView>
    <RelativeLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:visibility="visible"
        android:orientation="vertical">
	        <!-- <org.com.atmarkcafe.sky.customviews.charting.MTextView 
	            android:id="@+id/text_des"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/mya_credit_title"
	            custom:txtEng="@string/mya_credit_title"
	            custom:txtJa="@string/mya_credit_title_j"
	            android:layout_alignParentTop="true"
	            android:layout_margin="@dimen/dimen_10dp"
	            android:textColor="#555555"
	            android:textSize="@dimen/dimen_14dp"/>
	            android:layout_below="@+id/text_des" -->
			<ListView 
			    android:layout_marginTop="@dimen/dimen_10dp"
			    android:layout_alignParentTop="true"
			    android:layout_above="@+id/footer"
			    android:id="@+id/list_content"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:divider="@null"
		        android:dividerHeight="0dp">
			    
			</ListView>
         	<LinearLayout 
         	    android:id="@+id/footer"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical|center_horizontal"
			    android:layout_alignParentBottom="true">
			    	<org.com.atmarkcafe.sky.customviews.charting.MTextView
		                android:id="@+id/mya_credit_add"
		                android:layout_width="@dimen/dimen_225dp"
		                android:layout_height="@dimen/dimen_40dp"
		                android:background="@drawable/btn_checkout"
		                android:gravity="center"
		                android:text="@string/mya_credit_add"
		                android:textColor="#ffffff"
		                android:textSize="@dimen/dimen_12dp"
		                custom:txtEng="@string/mya_credit_add"
		                custom:txtJa="@string/mya_credit_add_j" 
		                android:layout_marginTop="@dimen/dimen_17dp"
			    		android:layout_marginBottom="@dimen/dimen_17dp"
			    		android:visibility="visible"
			    	/>
			</LinearLayout>
    </RelativeLayout>
      
	<com.acv.cheerz.base.view.LoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </com.acv.cheerz.base.view.LoadingView>
</RelativeLayout>

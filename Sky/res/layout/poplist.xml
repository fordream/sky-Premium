<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:id="@+id/piplist_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/piplist_main_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wheel_bg1"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45dp"
                android:background="@color/color_header_default" >

                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/poplist_baseTextView1_done"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:text="@string/invite_done_mail"
                    custom:txtEng="@string/invite_done_mail"
                    custom:txtJa="@string/invite_done_mail_j"
                    android:gravity="center" 
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold"/>
                <!-- android:background="@drawable/profile_dialog_agree" -->

                <TextView
                    android:id="@+id/poplist_baseTextView1_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/poplist_baseTextView1"
                    android:layout_alignBottom="@+id/poplist_baseTextView1"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:text=""/>

                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/poplist_baseTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="@string/btn_cancel"
                    custom:txtEng="@string/btn_cancel"
                    custom:txtJa="@string/btn_cancel_j"
                    android:gravity="center" 
                    android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_14dp"
                    android:textStyle="bold"/>
                <!-- android:background="@drawable/profile_dialog_cancel" -->
            </RelativeLayout>

            <z.lib.base.wheel.WheelView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:background="@drawable/wheel_bg1" />

            <!-- <ListView
                android:id="@+id/listView1_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200dp"
                android:background="@drawable/profile_dialog_bg"
                android:visibility="gone" >
            </ListView> -->
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
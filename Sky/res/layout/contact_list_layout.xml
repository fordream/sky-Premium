<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginBottom="@dimen/dimen_50dp"
        >

        <org.com.atmarkcafe.view.HeaderView
            android:id="@+id/contactlist_header_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </org.com.atmarkcafe.view.HeaderView>
		
        <ListView
            android:id="@+id/contactlist_listview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0.5dp"
            >
        </ListView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#FFFFFF"
         >

        <LinearLayout
            android:id="@+id/contactlist_ll_contact_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
             >

            <ImageView
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_contact_green" 
                android:layout_marginTop="@dimen/dimen_5dp"
                />

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/contact_us_screen_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/contact_text"
                android:text="@string/contact_us_title"
                custom:txtEng="@string/contact_us_title"
                custom:txtJa="@string/contact_us_title_j" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:background="#dfdcdc"
            >

            <ImageView
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/icon_infor_gray" />

            <org.com.atmarkcafe.sky.customviews.charting.MTextView
                android:id="@+id/contact_us_history_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#555555"
                android:text="@string/contact_us_title"
                custom:txtEng="@string/contact_history_list"
                custom:txtJa="@string/contact_history_list_j" />
            
        </LinearLayout>
    </LinearLayout>
 <com.acv.cheerz.base.view.LoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" >
    </com.acv.cheerz.base.view.LoadingView>
</RelativeLayout>
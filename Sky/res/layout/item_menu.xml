<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/org.com.atmarkcafe.sky"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<ImageView 
    android:id="@+id/menu_item_icon_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="5dp"
    />
 <org.com.atmarkcafe.sky.customviews.charting.MTextView
        android:id="@+id/menu_item_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/menu_item_icon_id"
        android:layout_marginLeft="5dp"
        />
 <ImageView 
     android:id="@+id/menu_item_icon_right_id"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@null"
     android:src="@drawable/ico_indi_white"
     android:layout_alignParentRight="true"
     android:layout_marginRight="10dp"
     android:layout_centerVertical="true"
     />
 
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.SkyPremiumLtd.SkyPremium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_comfirm"
        android:orientation="vertical" >

        <!-- <org.com.atmarkcafe.sky.customviews.charting.MTextView
            android:id="@+id/BaseBoldTextView01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_20dp" /> -->
        <org.com.atmarkcafe.sky.customviews.charting.MTextView
           android:id="@+id/txt_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/dimen_8dp"
           android:gravity="left"
           android:layout_gravity="left"
           android:text=""
           android:textColor="@android:color/black"
           android:textSize="@dimen/dimen_15dp" 
           android:visibility="gone"/>    
		<ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_gravity="center">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                	<org.com.atmarkcafe.sky.customviews.charting.MTextView
			            android:id="@+id/txt_content"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="@dimen/dimen_8dp"
			            android:layout_marginRight="@dimen/dimen_8dp"
			            android:gravity="center_horizontal|center_vertical"
			            android:layout_gravity="center"
			            android:text=""
			            android:textColor="@android:color/black"
			            android:textSize="@dimen/dimen_15dp" />
            </LinearLayout>
		    
		</ScrollView>
        

        <!-- <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:weightSum="2" >

            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_cancel"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/txt_cancel"
                    android:background="@drawable/dialog_button_no_radius"
                    android:layout_width="@dimen/dimen_120dp"
                    android:layout_height="@dimen/dimen_35dp"
                    android:gravity="center|center_vertical"
                    android:text="@string/tlt_cancel"
                  	custom:txtEng="@string/tlt_cancel"
			        custom:txtJa="@string/tlt_cancel_j"
			        android:textColor="#000000"
                    android:textSize="@dimen/dimen_15dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_okie"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <org.com.atmarkcafe.sky.customviews.charting.MTextView
                    android:id="@+id/txt_okie"
                    android:background="@drawable/dialog_button_ok_radius"
                    android:layout_width="@dimen/dimen_120dp"
                    android:layout_height="@dimen/dimen_35dp"
                    android:gravity="center|center_vertical"
                    android:text="@string/tlt_ok"
                  	custom:txtEng="@string/tlt_ok"
			        custom:txtJa="@string/tlt_ok_new_j"
			        android:textColor="#ffffff"
                    android:textSize="@dimen/dimen_15dp" />
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>